<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net48</TargetFramework>
    <AssemblyName>Eldan.ServicesScheduler</AssemblyName>
    <RootNamespace>Eldan.ServicesScheduler</RootNamespace>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Eldan.Logger" Version="*" />
    <PackageReference Include="Eldan.ServicesSchedulerLib" Version="*" />
    <PackageReference Include="Eldan.TypeExtensions" Version="*" />
  </ItemGroup>

  <ItemGroup>
    <Compile Include="**\*.cs" Exclude="**\*.generated.cs" />
    <Content Include="SchedulerConfig.xml" />
    <Content Include="TaskSchedulerTemplate.xml" />
    <None Include="App.config" />
  </ItemGroup>

</Project>
